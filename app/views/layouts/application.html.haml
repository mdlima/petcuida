/[if lt IE 7] <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en">
/[if IE 7] <html class="no-js lt-ie9 lt-ie8" lang="en">
/[if IE 8] <html class="no-js lt-ie9" lang="en">
<!--[if gt IE 8]><!-->
%html.no-js{:lang => 'en'}
  / <![endif]
  %head
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}/
    
    %meta{:content => (content_for?(:description) ? yield(:description) : 'Quem ama o seu pet, cuida.'), :name => 'description'}/
    %meta{:content => 'Time T-shirt ID', :name => 'author'}/
    
    %meta{:content => 'width=device-width', :name => 'viewport'}/
    %meta{:content => 'yes', :name => 'apple-mobile-web-app-capable'}/
    %meta{:content => 'black-translucent', :name => 'apple-mobile-web-app-status-bar-style'}/
    
    %title
      Pet Cuida
      = content_for?(:title) ? " | #{yield :title}" : ''
    
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lato:700', :media => 'all'
    = stylesheet_link_tag 'application', :media => 'all'
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = csrf_meta_tags
    = yield :head
    = javascript_include_tag 'application' #, :async => true

  %body
    /[if lt IE 7] <p class=chromeframe>Seu navegador é muito antigo. <a href="http://browsehappy.com/">Atualize a versão do seu navegador</a> ou <a href="http://www.google.com/chromeframe/?redirect=true">instale o Google Chrome Frame</a> para navegar neste site.</p>
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'

    #main{:role => 'main'}
      .container
        = render 'layouts/messages'
        = yield
      / ! end of .container
    / ! end of #main
    %footer.footer
      %hr/
      = render 'layouts/footer'
